<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/orderNumber"
            style="@style/textStyle"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:text="@string/orderNumber" />

        <TextView
            android:id="@+id/orderDesc"
            style="@style/textStyle"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_below="@id/orderNumber"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/menuItemDescPlaceholder"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/statusImg"
            android:layout_width="25dp"
            android:layout_height="75dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/orderDesc"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/pending" />

        <TextView
            android:id="@+id/statusLbl"
            style="@style/textStyle"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="27dp"
            android:layout_toRightOf="@id/statusImg"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:text="Pending" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>